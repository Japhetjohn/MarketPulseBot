modules = ["python-3.12"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "python bot.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 41170951
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt && python bot.py"

[[ports]]
localPort = 8080
externalPort = 80
